{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    // NO OUTDIR. We build with Vite.
    // tsc is only used to perform additional typescript checks
    "target": "es2018",
    "moduleResolution": "node",
    // Generate type definitions
    "declaration": true,
    // Strict type checking
    "strict": true,
    // Don't check third-party libraries
    "skipLibCheck": true
  },

  // Files to compile
  "include": ["src", "src/**/*"],
  "exclude": ["node_modules", "__tests__", "**/*.test.ts"]
}
