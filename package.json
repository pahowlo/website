{
  "name": "personal-github-page",
  "version": "0.6.1",
  "author": "Paul L <paul.legoux@gmail.com>",
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "build:all": "pnpm build:components && echo './' && pnpm build",
    "build:components": ".scripts/for-each-component pnpm build",
    "build": "vite build",
    "build:preview": "vite preview",
    "clean": "rm -rf node_modules/ dist/ target/ pnpm-lock.yaml",
    "clean:components": ".scripts/for-each-component pnpm clean",
    "clean:all": "pnpm clean:components && echo './' && pnpm clean",
    "dev": "vite",
    "format": "prettier --config package.json --write 'src/**/*.{js,ts,json}'",
    "install:all": "pnpm install:components && echo './' &&  pnpm install",
    "install:components": ".scripts/for-each-component pnpm install",
    "check:fix": "eslint src/ --fix",
    "check": "eslint src/ && echo && tsc --noEmit",
    "test": "jest"
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "printWidth": 100
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/jest": "^30.0.0",
    "eslint": "^9.31.0",
    "eslint-plugin-svelte": "^3.11.0",
    "html-minifier-terser": "^7.2.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.6.2",
    "svelte": "^5.36.13",
    "svelte-check": "^4.3.0",
    "svelte-preprocess": "^6.0.3",
    "terser": "^5.43.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.5"
  }
}
