{
  "name": "personal-github-page",
  "version": "0.8.2",
  "author": "Paul L <paul.legoux@gmail.com>",
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "build:all": "pnpm build:components && echo './' && pnpm build",
    "build:components": ".scripts/for_each_component.py pnpm build",
    "build": "vite build",
    "build:preview": "vite preview",
    "clean": "rm -rf node_modules/ dist/ target/ pnpm-lock.yaml",
    "clean:components": ".scripts/for_each_component.py pnpm clean",
    "clean:all": "pnpm clean:components && echo './' && pnpm clean",
    "dev": "vite",
    "format": "prettier --config package.json --write 'src/**/*.{js,ts,json}'",
    "install:all": "pnpm install:components && echo './' &&  pnpm install",
    "install:components": ".scripts/for_each_component.py pnpm install",
    "check": "tsc --noEmit",
    "test": "vitest run"
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "printWidth": 100
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@tsconfig/svelte": "^5.0.4",
    "html-minifier-terser": "^7.2.0",
    "prettier": "^3.6.2",
    "svelte": "^5.36.13",
    "svelte-check": "^4.3.0",
    "svelte-preprocess": "^6.0.3",
    "terser": "^5.43.1",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "vitest": "^3.2.4"
  }
}
